<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="@dimen/activity_margin">

    <ImageView
        android:id="@+id/music_item_icon"
        android:layout_width="@dimen/image_detail_width"
        android:layout_height="@dimen/image_detail_height" />

    <LinearLayout
        android:layout_width="@dimen/list_layout_width"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/list_layout_weight"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin">

        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listen_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>